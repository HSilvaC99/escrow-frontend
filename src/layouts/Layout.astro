---
interface Props {
  title: string;
}

import "@fontsource-variable/inter";
import NavBar from "../components/MultComponents/NavBar.astro";
import ViewTransitions from "astro/components/ViewTransitions.astro";

const { title } = Astro.props;
---

<html class="dark" lang="es">
  <head>
    <ViewTransitions />
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 dark:bg-gray-700">
    <NavBar />
    <div
      class="flex flex-col justify-center align-middle items-center p-8 sm:ml-24 md:ml-52"
    >
      <slot />
    </div>
  </body>
</html>

<style>
  body {
    font-family: "Inter", system-ui, sans-serif;
  }
</style>

<script>
  document.getElementById("theme-selector")?.addEventListener("click", () => {
    if (localStorage.theme === "dark") {
      localStorage.theme = "light";
      document.documentElement.classList.remove("dark");
    } else {
      localStorage.theme = "dark";
      document.documentElement.classList.add("dark");
    }
  });
</script>
