---
const { id, placeholder, type } = Astro.props;
---

<div class="flex flex-col w-full max-w-96 py-5">
  <label for="base-input" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
    <slot />
  </label>
  <input placeholder={placeholder} type={type} id={id} class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 min-w-full p-2.5 dark:bg-gray-800 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
</div>