---
import AmountField from "../UniqueComponents/AmountField.astro";
import FormField from "../UniqueComponents/FormField.astro";

import EthereumIcon from "../icons/Ethereum.astro";
---

<form class="flex flex-col items-center mb-5 max-w-96 min-w-full">
  <FormField id="payee_address" placeholder="0xa9fd..." type="text">
    Dirección del receptor
  </FormField>

  <FormField id="agent_address" placeholder="0xba0e..." type="text">
    Dirección del agente
  </FormField>

  <AmountField id="amount" placeholder="10.00" type="number">
    Cantidad
  </AmountField>

  <button
    type="submit"
    class="font-medium rounded-lg text-sm px-5 py-2.5 text-center items-center flex w-full max-w-96 justify-center mt-10 text-light dark:text-light hover:scale-105 transition-transform hover:text-black dark:hover:text-black bg-yellow-400 dark:bg-yellow-200 hover:bg-yellow-500"
  >
    <EthereumIcon class="size-4 text-purple-500" />
    <span class="ms-1">Pay with Ethereum</span>
  </button>
</form>
